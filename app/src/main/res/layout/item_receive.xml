<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/recieve_drawable"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:text="@string/textview"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/feeling_recieve"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/feeling"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/message_recieve"
        app:layout_constraintEnd_toEndOf="@+id/message_recieve"
        app:layout_constraintStart_toEndOf="@+id/message_recieve"
        app:layout_constraintTop_toTopOf="@+id/message_recieve"
        app:srcCompat="@drawable/ic_fb_like" />
</androidx.constraintlayout.widget.ConstraintLayout>